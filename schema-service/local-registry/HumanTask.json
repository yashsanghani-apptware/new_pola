{
  "$id": "http://registry.agsiri.com:8080/v1/schemas/humanTask/2.20",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$schemaName": "humanTask",
  "$schemaVersion": "2.20",
  "$author": "Surendra Reddy",
  "$description": "Represents a human task in the Satori process, including the task's assignee, due date, and form.",
  "$license": "Confidential Property of 451 Labs",
  "type": "object",
  "properties": {
    "type": {
      "enum": ["humanTask"]
    },
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "assignee": {
      "type": "string"
    },
    "dueDate": {
      "type": "string",
      "format": "date-time"
    },
    "form": {
      "type": "string"
    }
  },
  "required": ["type", "id", "assignee"]
}

